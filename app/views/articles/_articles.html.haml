%ul
  - @articles.each do |article|
    - author = article.user

    %li
      .article{class: "article-#{article.id}", data: {article_id: article.id}}

        .article_author
          = image_tag author.profile.avatar
          %div= author.name
          %div= time_ago_in_words(article.created_at, scope: 'datetime.distance_in_words.short') + " ago"

        .article_content
          .article_content_images
            %ul
              - article.images.each do |image|
                %li= image_tag url_for(image)

          .article_content_actions

            .like
              .like_heart.active-heart.hidden
                = link_to article_like_path(article), data: { turbo_method: :delete } do
                  = image_tag 'active-like.png'
              .like_heart.inactive-heart.hidden
                = link_to article_like_path(article), data: { turbo_method: :post } do
                  = image_tag 'inactive-like.png'

            = image_tag 'comment.png'
            = link_to "https://x.com/intent/tweet?url=#{article_url(article.id)}", title: 'X', target: '_blank' do
              = image_tag 'share.png'

          .article_content_content
            %div= author.name
            %p= article.content
