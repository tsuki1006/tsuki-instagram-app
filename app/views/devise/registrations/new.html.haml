=image_tag 'form-top.png', class: 'user_form_img'

.container.user_form
  = form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f|
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.label :name, 'Account'
      %br/
      = f.text_field :name, autofocus: true
    .field
      = f.label :email
      %br/
      = f.email_field :email, autocomplete: "email"
    .field
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "new-password"
    .actions
      = f.submit "CREATE ACCOUNT", class: 'button_submit create'
