.container{ id: 'article', data: {article_id: @article.id}}
  %header
    = link_to :back do
      = image_tag 'back.png', class: 'header_back'
    %h2 Comment

  %section.comments
    %ul.comments_list

  %section.new_comment
    .new_comment_input
      = image_tag 'comment.png'
      = text_area_tag :comment_content, ''

= javascript_include_tag "comment", "data-turbo-track": "reload", defer: true
