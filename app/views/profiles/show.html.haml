.container
  %header
    = link_to :back do
      = image_tag 'back.png', class: 'header_back'
    .user_name
      = current_user.name

  %ul
  - @profile.errors.full_messages.each do |message|
    %li= message

  .profile#profile-avatar{data: {avatar_image_url: current_user.avatar_image_url}}
    .user_image
      = form_with(model: @profile, id: "avatar_form", url: profile_path, method: 'put', local: true) do |f|
        = f.label :avatar do
          %div.avatar
        = f.file_field :avatar, class: 'input_avatar', style: 'display:none;'
    .user_counts
      = render 'commons/counts', user: current_user

= javascript_include_tag "profile", "data-turbo-track": "reload", defer: true
